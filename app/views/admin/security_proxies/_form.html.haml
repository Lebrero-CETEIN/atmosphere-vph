=simple_form_for [main_app, :admin, @security_proxy], html: { class: "form-horizontal"} do |f|
  .inputs
    =f.input :name, input_html: { class: 'input-xlarge'}
    =f.input :payload, input_html: { class: 'input-xlarge'}
    =f.association :users, input_html: { class: 'input-xlarge'}
  .actions
    .btn-group
      %button.btn.btn-success{id: "action-button",  type: "submit"}
        =fa_icon 'edit'
        = t('save')
    = link_to t('back'), main_app.admin_security_proxies_path, class: 'btn btn-default'
